<%= form_for(tag) do |f| %>
  <% if tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
      <% tag.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image_url %><br>
    <%= f.text_area :image_url, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :first_letter %><br>
    <%= f.text_field :first_letter, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :research_name %><br>
    <%= f.text_field :research_name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :slug %><br>
    <%= f.text_field :slug, :class => "form-control" %>
  </div>
  <div class="actions text-center">
  	<% if tag.new_record? %>
    <%= f.submit "Create", :class => "btn btn-success btn-lg" %>
    <% else %>
    <%= f.submit "Update", :class => "btn btn-success btn-lg" %>
    <% end %>
  </div>
<% end %>